\mode<presentation>

% University of Udine theme colors
\definecolor{UniBlue}{RGB}{0,100,159}
\definecolor{UniOrange}{RGB}{226,191,63}
\definecolor{UniGreen}{RGB}{0,142,54}
\definecolor{UniDarkBlue}{RGB}{0,80,127}

% Normal text
\setbeamercolor{normal text}{fg=black}

% First page
\setbeamercolor*{title}{fg=black,bg=gray}
\setbeamercolor*{author}{fg=black,bg=gray}
\setbeamercolor*{date}{fg=black,bg=gray}

% Generic frames header and footer
\setbeamercolor{titlelike}{fg=black}
\setbeamercolor*{frametitle}{fg=white}
\setbeamercolor*{framesubtitle}{fg=white}
\setbeamercolor*{title in head/foot}{fg=black}
\setbeamercolor*{author in head/foot}{fg=black}

%Blocks
\setbeamercolor{block title}{bg=MidnightBlue!30,fg=black}
\setbeamercolor{block title alerted}{bg=red!30,fg=black}
\setbeamercolor{block title example}{bg=UniBlue!30,fg=black}
\setbeamercolor{block body}{bg=MidnightBlue!5,fg=black}
\setbeamercolor{block body alerted}{bg=Red!5,fg=black}
\setbeamercolor{block body example}{bg=UniBlue!5,fg=black}

% Lists
\setbeamercolor*{item}{fg=UniDarkBlue}

% Quotation and quote
\setbeamercolor*{quotation}{fg=black,bg=MidnightBlue!5}

% Verse
\setbeamercolor*{verse}{fg=black,bg=MidnightBlue!5}

% Abstract
\setbeamercolor*{abstract}{fg=black,bg=MidnightBlue!5}

% Table of contents 
\setbeamercolor*{structure}{fg=black}

% Bibliography
\setbeamercolor*{bibliography entry title}{fg=black}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{bibliography entry location}{fg=black!50}
\setbeamercolor*{bibliography entry note}{fg=black!50}


\mode
<all>